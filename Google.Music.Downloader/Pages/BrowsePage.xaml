<Page x:Class="Google.Music.Downloader.Pages.BrowsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Google.Music.Downloader.Pages"
      mc:Ignorable="d" 
      Title="BrowsePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBox" Margin="5" Grid.Row="0" SelectionMode="Multiple">
            <ListBoxItem IsEnabled="False" MouseDoubleClick="ListBox_DoubleClick">Loading...</ListBoxItem>
        </ListBox>
        <Grid Grid.Row="1">
            <Button Click="ButtonReLoad_Click" Margin="5" HorizontalAlignment="Left">Reload</Button>
            <Button Click="ButtonLoad_Click" Margin="5" HorizontalAlignment="Right">Continue</Button>
        </Grid>
    </Grid>
</Page>
